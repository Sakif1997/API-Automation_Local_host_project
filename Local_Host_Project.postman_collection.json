	"item": [
		{
			"name": "Create User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Successful POST request\", function () {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([201, 202]);\r",
							"});\r",
							"\r",
							"let response = pm.response.json();\r",
							"let responseEmail = response.user.email;\r",
							"\r",
							"pm.test(\"Email contains 'sakif' and ends with @gmail.com\", function () {\r",
							"    pm.expect(responseEmail).to.match(/^sakif\\d+@gmail\\.com$/);\r",
							"});\r",
							"\r",
							"// Set the User ID in environment variable\r",
							"// Parse the response JSON first\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"// Then set the environment variable\r",
							"pm.environment.set(\"User_id\", jsonData.user.id);\r",
							"pm.environment.set(\"accessToken\", jsonData.accessToken);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"email\": \"sakif{{$randomInt}}@gmail.com\",\r\n  \"password\": \"sakfi123\",\r\n  \"welcomeEmail\": false\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{BaseUrl}}/signup",
					"host": [
						"{{BaseUrl}}"
					],
					"path": [
						"signup"
					]
				}
			},
			"response": []
		},
